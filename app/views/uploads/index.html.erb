<% if !flash[:notice].blank? %>
  <div class = "alert alert-info">
    <%= flash[:notice] %>
  </div>
<% end %>

<br />

<%= link_to "New Upload", new_upload_path, class: "btn btn-primary" %>
<br />
<br />

<table class = "table table-bordered table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Category</th>
      <th>Sub-Category</th>
      <th>Download Link</th>
      <th> </th>
    </tr>
  </thead>
   
  <tbody>
    <% @uploads.each do |upload| %>
         
      <tr>
        <td><%= upload.name %></td>
        <td><%= upload.category %></td>
        <td><%= upload.subcategory %></td>
        <td><%= link_to "Download Upload", upload.attachment_url %></td>
        <td><%= button_to "Delete",  upload, method: :delete, class: "btn btn-danger", confirm: "Are you sure that you wish to delete #{upload.name}?" %></td>
      </tr>
         
    <% end %>
  </tbody>
   
</table>