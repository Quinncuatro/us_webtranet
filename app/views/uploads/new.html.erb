<% if !@upload.errors.empty? %>
  <div class = "alert alert-error">
      
    <ul>
      <% @upload.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
      
  </div>
<% end %>

<div class = "well">
  <%= form_for @upload, html: { multipart: true } do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.label :category %>
    <%= f.select :category, ['Chambers', 'Court Family', 'Forms', 'Home', 'HR', 'IT', 'Jury', 'Operations', 'What\'s New']%>
    <%= f.label :subcategory %>
    <%= f.select :subcategory, ['A','B','C']%>
    <%= f.label :attachment %>
    <%= f.file_field :attachment %>
    <%= f.submit "Save", class: "btn btn-primary" %>
  <% end %>
</div>